#include <iostream>
#include <vector>
#include <unordered_map>
using namespace std;

int main() {
    int n, k;
    cin >> n >> k;
    vector<int> arr(n);
    for (int i = 0; i < n; i++)
        cin >> arr[i];

    unordered_map<int, int> freq;
    int count = 0;

    for (int i = 0; i < n; i++) {
        int complement = k - arr[i];
        if (freq.find(complement) != freq.end())
            count += freq[complement];
        freq[arr[i]]++;
    }

    cout << count;
    return 0;
}
