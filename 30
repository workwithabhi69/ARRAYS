#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;

int main() {
    int N, M;
    cin >> N >> M;
    vector<int> A(N);
    for (int i = 0; i < N; i++)
        cin >> A[i];

    sort(A.begin(), A.end());

    int minDiff = INT_MAX;

    for (int i = 0; i <= N - M; i++) {
        int diff = A[i + M - 1] - A[i];
        if (diff < minDiff)
            minDiff = diff;
    }

    cout << minDiff;
    return 0;
}
